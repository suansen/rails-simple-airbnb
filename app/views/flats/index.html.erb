<%# <div class="max-w-lg mx-auto mt-16 text-center max-w-sm rounded overflow-hidden shadow-lg p-10">
  <h1 class="mb-4 text-3xl font-black">Here are all our Flats!</h1>
  <p class="text-lg leading-snug">If this looks nice, it means Tailwind is set up properly.</p>
</div> %>

<h1 class="text-3xl p-10 mx-auto text-center">All Flats</h1>
<div class="flex flex-wrap">
<% @flats.each do |flat| %>
  <div class="xl:w-1/3 md:w-1/2 p-4">
    <div
      class="
        c-card
        block
        bg-white
        shadow-md
        hover:shadow-xl
        rounded-lg
        overflow-hidden
      "
    >
      <img
        class="
          lg:h-60
          xl:h-56
          md:h-64
          sm:h-72
          xs:h-72
          h-72
          rounded
          w-full
          object-cover object-center
          mb-4
        "
        src="https://picsum.photos/720/400"
        alt="Image Size 720x400"
      />
      <div class="p-4">
        <h2
          class="
            text-lg text-gray-900
            font-medium
            title-font
            whitespace-nowrap
            truncate
            ...
          "
        >
          <%= flat.name %>
        </h2>
        <p class="font-light mb-4 text-sm text-gray-600">
          <%= flat.address %>
        </p>
        <p
          class="
            text-gray-600
            font-light
            text-md
            whitespace-nowrap
            truncate
            ...
          "
        >
          <%= flat.description %>
          <br />
        </p>


        <p>
          <%= link_to "Read More", flat_path(flat), class:"inline-flex text-indigo-500" %>
        </p>
        <div class="pt-4 border-t text-xs text-gray-700">
          <div class="flex justify-between">
            <div>
              Guests:
              <span
                class="
                  inline-flex
                  items-center
                  justify-center
                  px-2
                  py-1
                  text-xs
                  font-bold
                  leading-none
                  text-white
                  bg-red-400
                  rounded-full
                "
                ><%= flat.number_of_guests %></span
              >
            </div>

            <div>
              Price:
              <span
                class="
                  inline-flex
                  items-center
                  justify-center
                  px-2
                  py-1
                  text-xs
                  font-bold
                  leading-none
                  text-white
                  bg-blue-400
                  rounded-full
                "
                >$ <%= flat.price_per_night %></span
              >
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
<% end %>
</div>
