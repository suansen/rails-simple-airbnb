<div class="relative">
  <img
    class="
      rounded
      w-full
      object-cover object-center
      mb-4
      h-80
      "
      src="https://picsum.photos/720/400"
      alt="Image Size 720x400"
  />
  <div class="px-20 grid grid-cols-3 gap-4 absolute top-40">
    <div class="col-span-2">
      <div class="bg-gradient-to-r from-gray-100 to-gray-200 rounded py-3 px-4 mb-4">
        <p class="text-3xl mb-1"><%= @flat.name %></p>
        <p class="text-md"><%= @flat.address %></p>
      </div>
      <div class ="bg-gray-100 rounded py-3 px-4 mb-4">
        <p class ="text-xl mb-1">A bit more about this flat...</p>
        <p class ="text-sm"><%= @flat.description %></p>
      </div>
      <div class="bg-gray-100 rounded py-3 px-4 mb-4">
        <p class ="text-xl mb-1">Details</p>
        <div class="flex justify-between">
          <p>Max guests: <%= @flat.number_of_guests %></p>
          <p>Price: $ <%= @flat.price_per_night %></p>
        </div>
      </div>
    </div>
    <div class="col-span-1">
      <div class="bg-gray-100 rounded p-2">
        <%= simple_form_for [ @flat ] do |f| %>
          <%= f.input :name, class:"my-1" %>
          <%= f.input :address %>
          <%= f.submit "Book", class: "mt-2 bg-blue-500 hover:bg-blue-700 text-white rounded p-1 w-full" %>
        <% end %>
      </div>
      <div class="bg-gray-100 rounded">

      </div>

    </div >

  </div>

</div>
